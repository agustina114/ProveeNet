<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:layout_marginHorizontal="16dp"
    app:cardBackgroundColor="#FFFFFF"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- ðŸ”¹ Nombre del producto -->
        <TextView
            android:id="@+id/tvNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cemento 25kg"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- ðŸ”¹ CÃ³digo del producto -->
        <TextView
            android:id="@+id/tvCodigo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CEM-001"
            android:textColor="#666666"
            android:textSize="11sp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="6dp" />

        <!-- ðŸ”¹ CategorÃ­a como badge -->
        <TextView
            android:id="@+id/tvCategoria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ConstrucciÃ³n"
            android:textColor="#424242"
            android:textSize="11sp"
            android:background="#F5F5F5"
            android:paddingHorizontal="8dp"
            android:paddingVertical="3dp"
            android:layout_marginBottom="8dp" />

        <!-- ðŸ”¹ DescripciÃ³n -->
        <TextView
            android:id="@+id/tvDescripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cemento alta resistencia"
            android:textColor="#666666"
            android:textSize="13sp"
            android:layout_marginBottom="12dp" />

        <!-- Separador -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F0F0F0"
            android:layout_marginBottom="12dp" />

        <!-- ðŸ”¹ TextView ocultos para compatibilidad con cÃ³digo Java -->
        <TextView
            android:id="@+id/tvEstado"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvProveedor"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone" />

        <!-- ðŸ”¹ Precio unitario -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="4dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Precio unitario:"
                android:textColor="#666666"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tvPrecio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$8.500"
                android:textColor="#388E3C"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- ðŸ”¹ Stock disponible -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="4dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Stock disponible:"
                android:textColor="#666666"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tvStock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="40 unidades"
                android:textColor="#388E3C"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- ðŸ”¹ Valor total -->

        <!-- ðŸ”¹ Botones de acciÃ³n -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="2">

            <!-- âœï¸ Editar -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnEditar"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:background="@drawable/btn_white_bg"
                android:drawableLeft="@drawable/ic_edit"
                android:drawablePadding="6dp"
                android:gravity="center"
                android:text="Editar"
                android:textAllCaps="false"
                android:textColor="#333333"
                android:textSize="13sp" />

            <!-- ðŸ—‘ï¸ Eliminar -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnEliminar"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:background="@drawable/btn_white_bg"
                android:drawableLeft="@drawable/ic_delete"
                android:drawablePadding="6dp"
                android:gravity="center"
                android:text="Eliminar"
                android:textAllCaps="false"
                android:textColor="#D32F2F"
                android:textSize="13sp" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>