<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardBackgroundColor="#FFFFFF"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- ðŸ”¹ Nombre del producto -->
        <TextView
            android:id="@+id/tvNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre del producto"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- ðŸ”¹ CÃ³digo en rectÃ¡ngulo gris -->
        <TextView
            android:id="@+id/tvCodigo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CÃ³digo: CEM-001"
            android:textColor="#424242"
            android:textSize="12sp"
            android:background="#F0F0F0"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="8dp"
            android:layout_gravity="start" />

        <!-- ðŸ”¹ CategorÃ­a -->
        <TextView
            android:id="@+id/tvCategoria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CategorÃ­a"
            android:textColor="#388E3C"
            android:textSize="14sp"
            android:textStyle="bold" />

        <!-- ðŸ”¹ DescripciÃ³n -->
        <TextView
            android:id="@+id/tvDescripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DescripciÃ³n breve del producto"
            android:textColor="#757575"
            android:textSize="14sp"
            android:layout_marginTop="8dp" />

        <!-- ðŸ”¹ Proveedor -->
        <TextView
            android:id="@+id/tvProveedor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Proveedor: Distribuidora Andina"
            android:textColor="#424242"
            android:textSize="13sp"
            android:layout_marginTop="8dp" />

        <!-- ðŸ”¹ Estado -->
        <TextView
            android:id="@+id/tvEstado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estado: Activo"
            android:textColor="#2E7D32"
            android:textStyle="bold"
            android:textSize="12sp"
            android:background="@drawable/badge_estado_activo"
            android:paddingHorizontal="10dp"
            android:paddingVertical="4dp"
            android:layout_marginTop="4dp"
            android:layout_gravity="start" />

        <!-- ðŸ”¹ Precio y Stock en fila -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <!-- Precio -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Precio"
                    android:textColor="#757575"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvPrecio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$0"
                    android:textColor="#2E7D32"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Stock -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stock disponible"
                    android:textColor="#757575"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvStock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 unidades"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <!-- ðŸ”¹ Botones de acciÃ³n -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="16dp">

            <!-- âœï¸ Editar -->
            <Button
                android:id="@+id/btnEditar"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:background="@drawable/btn_outline_green_bg"
                android:drawableLeft="@drawable/ic_edit"
                android:drawablePadding="8dp"
                android:paddingHorizontal="20dp"
                android:text="Editar"
                android:textAllCaps="false"
                android:textColor="#FDFFFD"
                android:textSize="14sp" />

            <!-- ðŸ—‘ï¸ Eliminar -->
            <Button
                android:id="@+id/btnEliminar"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="Eliminar"
                android:textAllCaps="false"
                android:textColor="#D32F2F"
                android:textSize="14sp"
                android:drawableLeft="@drawable/ic_delete"
                android:drawablePadding="8dp"
                android:background="@drawable/btn_outline_red_bg"
                android:paddingHorizontal="20dp"
                android:layout_marginStart="8dp" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
