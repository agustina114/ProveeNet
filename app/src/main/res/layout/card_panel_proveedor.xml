<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="16dp">

    <!-- Card verde: Panel de Proveedor -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardBackgroundColor="#2E7D32"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Panel de Proveedor"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gestiona tu catálogo, recibe órdenes y\naumenta tus ventas"
                android:textColor="#FFFFFF"
                android:textSize="13sp"
                android:alpha="0.9"
                android:layout_marginTop="8dp"
                android:lineSpacingExtra="2dp" />

            <!-- Badge Premium -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Proveedor Premium"
                android:textColor="#2E7D32"
                android:textSize="12sp"
                android:background="@drawable/badge_premium"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:layout_marginTop="16dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Card blanca: Últimas Órdenes -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Últimas Órdenes"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <!-- Item de orden (puedes repetir esto o usar RecyclerView) -->
            <LinearLayout
                android:id="@+id/llUltimaOrden"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="8dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvOrdenNumero"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Orden #1001"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvOrdenFecha"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="31-10-2025"
                        android:textColor="#666666"
                        android:textSize="12sp"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="end">

                    <TextView
                        android:id="@+id/tvOrdenTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$128.500"
                        android:textColor="#388E3C"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvOrdenEstado"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Recibida"
                        android:textColor="#388E3C"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:layout_marginTop="2dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Mensaje si no hay órdenes -->
            <TextView
                android:id="@+id/tvNoOrdenes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No hay órdenes recientes"
                android:textColor="#999999"
                android:textSize="13sp"
                android:visibility="gone"
                android:paddingVertical="8dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>