<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Color de fondo del modal -->
    <solid android:color="#FFFFFF" />

    <!-- Bordes redondeados -->
    <corners android:radius="20dp" />

    <!-- Sombra suave -->
    <padding
        android:left="16dp"
        android:top="16dp"
        android:right="16dp"
        android:bottom="16dp" />

    <!-- Borde sutil -->
    <stroke
        android:width="1dp"
        android:color="#DDDDDD" />
</shape>
